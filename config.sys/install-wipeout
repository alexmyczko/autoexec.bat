# apt install git wget libsdl2-dev libglew-dev unzip
git clone -q --recursive https://github.com/phoboslab/wipeout-rewrite.git
cd wipeout-rewrite
wget https://raw.githubusercontent.com/mdqinc/SDL_GameControllerDB/refs/heads/master/gamecontrollerdb.txt
wget https://phoboslab.org/files/wipeout-data-v01.zip
unzip -n wipeout-data-v01.zip
make
echo "Type ./wipegame to run..."
# settings are saved in $HOME/.local/share/phoboslab/wipeout/save.dat or Library/Application Support/phoboslab/wipeout/save.dat
