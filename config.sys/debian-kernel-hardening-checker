# apt install kernel-hardening-checker
echo You might want to set the following via /etc/sysctl.d/
kernel-hardening-checker -a|grep sysctl|sed 1d|grep -v OK$|while read a; do b=$(echo $a|awk '{print $1}');c=$(echo $a|awk -F '|' '{print $(NF-1)}'); echo sysctl $b=$(echo $c); done
echo
echo You might want to check cmdline parameters, see /proc/cmdline
echo "See GRUB_CMDLINE_LINUX_DEFAULT= in /etc/default/grub (if you have GRUB)"
kernel-hardening-checker -a|grep cmdline|grep -v OK
echo
echo The following settings are via kconfig
echo See install-1up-kernel to quickly build your own kernel
kernel-hardening-checker -a |grep kconfig|grep -v OK
