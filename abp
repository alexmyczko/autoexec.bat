# automatic simple sid backport

# check if called binaries are available
for a in dget dpkg-source debuild dpkg apt-mark lynx; do
    hash $a >/dev/null
    if [ ! $? -eq 0 ]; then
        echo $a not found
        exit 1
    fi
done

